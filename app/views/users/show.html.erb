<section>
  <h1>User</h1>

  <div>
    <%= image_tag @user.photo%>
    <p><%= @user.name %> Number of posts: <%= @user.posts_counter %></p>
  </div>
  <div>
    <p>Bio</p>
    <p><%= @user.bio %></p>
  </div>
  <ul>
  <% @user.recent_posts.each  do |post| %>
    <li>
      <p><%= post.title %></p>
      <p><%= truncate(post.text, length: 50) %></p>
      <p>Comments <%= post.comments_counter %>, Likes <%= post.likes_counter %></p>
    </li>
  <% end %>
  </ul>

  <%= link_to "See all posts", user_posts_path(@user) %>
</section>